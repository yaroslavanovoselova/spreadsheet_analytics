<Window x:Class="Spreadsheet_Analysis.ColorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spreadsheet_Analysis"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="ColorDialog" Height="250" Width="300">
    <Grid>

        <Button x:Name="OkButton" Content="Готово" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Width="155" Height="40" Click="OkButton_Click"/>
        <xctk:ColorPicker x:Name="ColorPicker" Margin="0,82,0,0" Width="250" Height="60" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="Выберете цвет столбцов:" HorizontalAlignment="Center" Height="25" Margin="0,35,0,0" VerticalAlignment="Top" Width="150"/>
    </Grid>
</Window>
